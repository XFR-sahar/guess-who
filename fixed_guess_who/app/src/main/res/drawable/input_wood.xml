<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- צבע עץ כהה -->
    <solid android:color="#8C6F3B" />

    <!-- פינות מעוגלות -->
    <corners android:radius="10dp" />

    <!-- מסגרת עדינה -->
    <stroke
        android:width="3dp"
        android:color="#472804" />

    <!-- ריווח פנימי -->
    <padding
        android:left="12dp"
        android:top="10dp"
        android:right="12dp"
        android:bottom="10dp" />

</shape>
